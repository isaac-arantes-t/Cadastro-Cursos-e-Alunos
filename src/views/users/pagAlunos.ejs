<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Unicesumar - Lista de Usuarios</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Alunos</h1>
        <a href="/users" class="btn btn-primary mt-3">Sair</a>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>E-Mail</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% if (Students.length > 0) { %>
                    <% Students.forEach(aluno => { %>
                        <tr>
                            <td><%= aluno.student_id %></td>
                            <td>
                                <a href="/enrollments/<%= aluno.student_id %>" class="text-decoration-none">
                                    <%= aluno.name %>
                                </a>
                            </td>
                            <td><%= aluno.age %></td>
                            <td><%= aluno.email %></td>
                            <td>
                                <form action="/users/editar/<%= aluno.student_id %>" method="GET">
                                    <button type="submit" class="btn btn-primary">Editar</button>
                                </form>
                            </td>

                            <td> 
                                <form action="/users/deletar/<%= aluno.student_id %>" method="post">
                                    <button type="submit" class="btn btn-primary">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <%} else { %>
                <tr>
                    <td colspan="4">Nenhum Aluno cadastrado</td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/users/cadastrarAlunos" class="btn btn-primary mt-3">Adicionar</a>
        <a href="/users/posts" class="btn btn-primary mt-3">Ver Postagens</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

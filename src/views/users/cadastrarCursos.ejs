<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Unicesumar - Lista de Usuarios</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Cursos</h1>
        <a href="/users" class="btn btn-primary mt-3">In√≠cio</a>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Descricao</th>
                    <th>Duracao</th>
                    <th>Valor</th>
                    <th>     </th>
                </tr>
            </thead>

            <tbody>
                <% if (Courses.length > 0) { %>
                    <% Courses.forEach(curso => { %>
                        <tr>
                            <td><%= curso.course_id %></td>
                            <td><a href="/users/course/<%= curso.course_id %>" class="text-decoration-none"><%= curso.name %></a></td>
                            <td><%= curso.description %></td>
                            <td><%= curso.duration %></td>
                            <td><%= curso.price %></td>
                            <td>
                                <form action="/users/edit/<%= curso.course_id %>" method="GET">
                                    <button type="submit" class="btn btn-primary">Editar</button>
                                </form>
                            </td>
                            <td> 
                                <form action="/users/delete/<%= curso.course_id %>" method="post">
                                    <button type="submit" class="btn btn-primary">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">Nenhum Curso cadastrado</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/users/cadastrarCurso" class="btn btn-primary mt-3">Adicionar</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
